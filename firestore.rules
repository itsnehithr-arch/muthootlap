rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow read/write access for authenticated users (including anonymous)
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
    
    // Specific rules for app collections
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    match /devices/{deviceId} {
      allow read, write: if request.auth != null;
    }
    
    match /location_logs/{logId} {
      allow read, write: if request.auth != null;
    }
    
    match /access_control/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    match /otp_logs/{logId} {
      allow read, write: if request.auth != null;
    }
    
    match /notification_logs/{logId} {
      allow read, write: if request.auth != null;
    }
    
    // Legacy collections for backward compatibility
    match /user_sessions/{sessionId} {
      allow read, write: if request.auth != null;
    }
    
    match /location_tracking/{trackingId} {
      allow read, write: if request.auth != null;
    }
  }
}
